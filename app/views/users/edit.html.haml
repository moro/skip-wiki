= render :partial => 'users/side_menu'

%h1= _("Edit user information")

.app-layout
  = error_messages_for :user
  - form_for @user  do |f|
    %table.input.user.skipwiki
      = render :partial => 'form', :locals => {:f => f}
      %tr.identity-url
        %th&= _("OpenID URL")
        %td&= @user.identity_url

    = submit_tag _("Update")

